  "bugs": {
    "url": "https://github.com/mapbox/scroll-restorer/issues"
  },
  "homepage": "https://github.com/mapbox/scroll-restorer#readme",
  "devDependencies": {
    "eslint": "^4.1.1",
    "husky": "^0.14.1",
    "lint-staged": "^4.0.0",
    "prettier": "^1.5.2"
  },
  "lint-staged": {
    "{,test/**/}*.js": [
      "eslint",
      "prettier --single-quote --write",
